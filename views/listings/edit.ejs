<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Update your Listing</h3>
                <br>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate
                    class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Enter Title</label>
                        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Write proper Title!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Enter Description</label>
                        <textarea name="listing[description]" type="text" cols="20" rows="5" class="form-control"
                            required><%= listing.description %></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Write precise Description!
                        </div>
                    </div>
                    <div class="mb-3">
                        <p>Original Listing Picture -</p>
                        <img src="<%= originalImageUrl %>" alt="original_img">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload new picture (if you want)</label>
                        <input name="listing[image]"  type="file" class="form-control"
                            >
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Provide valid a picture!
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Enter Price</label>
                            <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Mention correct Price amount!
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Enter Country</label>
                            <input name="listing[country]" value="<%= listing.country %>" type="text"
                                class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter valid Country name!
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Enter Location</label>
                        <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter valid Location name!
                        </div>
                    </div>
                    <button class="btn btn-dark edit-btn mt-3">Make Changes</button>
                    <br><br>
                </form>
            </div>
        </div>
        
    </body>